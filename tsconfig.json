{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

		"rootDir": "src",
		"outDir": "dist",
  },
	"include": [
		"src/frontend",
		"src/index.html.ts",
		"src/globals.d.ts"
	],
	"exclude": [
		"src/backend/",
		"src/**/_*"
	],
  "references": [{ "path": "./tsconfig.node.json" }]
}
