{
  "name": "schriftsteller",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc && run-p turtle-dev vite-serve typescript-watch",
		"vite-serve": "vite --host",
    "build-production": "run-p typescript-production && rollup --config rollup.config.js && run-p turtle-production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
		"turtle-production": "turtle --in='dist' --out='dist' --exclude='**/*.partial.html.js' --verbose='true'",
		"typescript-watch": "tsc --watch",
    "typescript": "tsc",
		"typescript-production": "tsc ./src/index.html.ts --outDir ./dist --module ESNext --target ES2020 --moduleResolution bundler",
		"turtle-dev": "turtle --in='src:dist' --out='dist' --exclude='**/*.partial.html.js' --verbose='true'",
    "typescript": "tsc",
    "importmap": "importly --host=node_modules < package-lock.json > dist/importmap.json",
  },
  "dependencies": {
    "es-module-shims": "^1.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
  },
  "devDependencies": {
    "@benev/turtle": "^0.5.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.1.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "terser": "^5.22.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  }
}
